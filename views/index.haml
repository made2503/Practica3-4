  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{:href => "#"} RPS
          .nav-collapse.collapse
            %ul.nav
              %li
                %a{:href => '?choice=rock'} ROCK
                %a{:href => '?choice=paper'} PAPER
                %a{:href => '?choice=scissors'} SCISSORS

    .container

      - if(player_throw == 'rock')
        %img{:src => 'http://banot.etsii.ull.es/alu4103/piedra.jpg', :alt => 'Rock', :width => '100px', :border => '2px'}
      - elsif (player_throw == 'scissors')
        %img{:src => 'http://banot.etsii.ull.es/alu4103/tijera.jpg', :alt => 'Scissors', :width => '100px', :border => '2px'}
      - elsif (player_throw == 'paper')
        %img{:src => 'http://banot.etsii.ull.es/alu4103/papel.jpg', :alt => 'Paper', :width => '100px', :border => '2px'}

      %h2 vs

      - if(computer_throw == 'rock')
        %img{:src => 'http://banot.etsii.ull.es/alu4103/piedra.jpg', :alt => 'Rock', :width => '100px', :border => '2px'}
      - elsif (computer_throw == 'scissors')
        %img{:src => 'http://banot.etsii.ull.es/alu4103/tijera.jpg', :alt => 'Scissors', :width => '100px', :border => '2px'}
      - elsif (computer_throw == 'paper')
        %img{:src => 'http://banot.etsii.ull.es/alu4103/papel.jpg', :alt => 'Paper', :width => '100px', :border => '2px'}
    
